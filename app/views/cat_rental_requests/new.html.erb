<h1>So you want to rent a cat...</h1>

<form action="<%= cat_rental_requests_url %>" method="post">

  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label>
    Please select your cat!
    <select name="cat_rental_request[cat_id]">
      <option value="blank"> </option>
      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>"><%= cat.name %></option>
      <% end %>
    </select>
  </label>
  <br>

  <label>
    Start date for your rental?
    <input type="date" name="cat_rental_request[start_date]" value="<%= @rental_request.start_date %>">
  </label>
  <br>

  <label>
    End date for your rental?
    <input type="date" name="cat_rental_request[end_date]" value="<%= @rental_request.end_date %>">
  </label>
  <br>

  <button>Submit rental!</button>